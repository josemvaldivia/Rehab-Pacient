<grammar version="1.0" xml:lang="en-US" root="rootRule" tag-format="semantics/1.0-literals" xmlns="http://www.w3.org/2001/06/grammar">
  <rule id="rootRule">
    <one-of>
      <item>
        <tag>GREEN</tag>
        <one-of>
          <item> green </item>
          <item> greens </item>
          <item> turn green </item>
          <item> change colour to green </item>
        </one-of>
      </item>
      <item>
        <tag>RED</tag>
        <one-of>
          <item> reds </item>
          <item> red </item>
          <item> turn red </item>
          <item> change colour to red </item>
        </one-of>
      </item>
    </one-of>
  </rule>
</grammar>